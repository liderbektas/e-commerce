<div class="modal fade" id="editCategory" tabindex="-1" role="dialog" aria-labelledby="editCategoryLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background-color: #0a0a0b; color: #fff; border-radius: 12px;">
            <div class="modal-header">
                <h5 class="modal-title" style="font-weight: bold; font-size: 22px;">Kategoriyi Güncelle</h5>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" name="id"/>
                    
                    <div class="form-group mb-3 form-container">
                        <input name="Name" class="form-control text-white" placeholder="İsim" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <textarea name="Description" class="form-control text-white" placeholder="Açıklama" rows="4" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px;"></textarea>
                    </div>
                    
                    <div class="mt-3">
                        <button type="submit" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff; border: none;">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>