@model IEnumerable<Reviews>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<div class="">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 style="font-weight: bold; font-size: 30px;">İncelemeler</h3>
    </div>

    <table style="width: 100%;">
        <thead>
        <tr class="text-start" style="font-weight: lighter; font-size: 14px;">
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Kullanıcı</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Ürün</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Yorum</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Puan</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">Yorum Tarihi</div>
            </th>
            <th style="color:#a1a1aa; font-weight: lighter;">
                <div class="py-2" style="border-bottom: 2px solid #52525b; margin-right: 8px;">İşlemler</div>
            </th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Any())
        {
        foreach (var review in Model)
        {
        <tr style="font-weight: lighter; font-size: 14px;">
            <td style="padding: 10px 5px;">
                @if (review.User != null)
                {
                <p>@review.User.userName</p>
                }
                else
                {
                <p>-</p>
                }
            </td>
            <td style="padding: 10px 5px;">
                @if (review.Products != null)
                {
                <div>
                    <img src="~/Images/@review.Products.Img" alt="Product Image" height="50" />
                </div>
                }
                else
                {
                <p>-</p>
                }
            </td>
            <td style="padding: 10px 5px;">@review.Review</td>
            <td style="width: 150px; padding: 10px 5px;">
                @for (int i = 0; i < review.Rating; i++)
                {
                <svg aria-hidden="true" class="rr--svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 23.77" width="16" height="16" preserveAspectRatio="xMidYMid meet">
                    <g shape-rendering="geometricPrecision">
                        <path d="M12.5,18.16l-7.73,5.61,2.95-9.08L0,9.07H9.55S12.5,0,12.5,0l2.95,9.07h9.55l-7.73,5.62,2.95,9.08-7.73-5.61Z" fill="#db711a"></path>
                    </g>
                </svg>
                }
            </td>
            <td style="padding: 10px 5px;">@review.CreatedAt</td>
            <td style="padding: 10px 5px;">
                <div class="d-flex gap-2">
                    <a asp-area="Admin" asp-controller="Reviews" asp-action="Delete" asp-route-id="@review.Id" class="px-3 py-2 rounded-3" style="background-color: #371517; text-decoration: none; font-size: 14px; color:#c03839;">Sil</a>
                </div>
            </td>
        </tr>
        }
        }
        </tbody>
    </table>

    @if (!Model.Any())
    {
    <div class="mt-2 py-3 px-4" style="font-weight: lighter; background-color: #211a0e; color:#d6a30e;">Veri bulunamadı</div>
    }
</div>
