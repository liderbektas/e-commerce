<div class="modal fade" id="editUser" tabindex="-1" role="dialog" aria-labelledby="editUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="background-color: #0a0a0b; color: #fff; border-radius: 12px;">
            <div class="modal-header">
                <h5 class="modal-title" style="font-weight: bold; font-size: 22px;">Kullanıcıyı Güncelle</h5>
            </div>

            @if (TempData["Error2"] != null)
            {
                <div class="px-3">
                    <div class="w-100 text-center" style="background-color: #371517; color: #fff; padding: 8px; border-radius: 2px; font-size: 14px; margin-top: 6px;">
                        @TempData["Error2"]
                    </div>
                </div>
            }
            <div class="modal-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" name="id"/>

                    <div class="form-group mb-3 form-container">
                        <input id="username" name="Username" class="form-control text-white" placeholder="İsim" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <input name="Email" type="email" class="form-control text-white" placeholder="E-posta" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <input name="Password" class="form-control text-white" type="password" placeholder="Şifre" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <input name="PhoneNumber" class="form-control text-white" placeholder="Telefon" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <select name="userRole" class="form-control text-white" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;">
                            <option value="">Rol Seçin</option>
                            <option value="Admin">Admin</option>
                            <option value="Müşteri">Müşteri</option>
                        </select>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <textarea name="Address" class="form-control text-white" placeholder="Adres" rows="4" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px;"></textarea>
                    </div>

                    <div class="form-group mb-3 form-container">
                        <input name="BirthDate" class="form-control text-white" type="datetime" placeholder="Doğum tarihi" style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="px-3 py-2 rounded-3" style="background-color: #27272a; text-decoration: none; font-size: 14px; color:#fff; border: none;">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    
    document.addEventListener("DOMContentLoaded", () => {
        document.getElementById('editUser').addEventListener('hidden.bs.modal', function () {
            location.reload();
        });
    });
    
</script>