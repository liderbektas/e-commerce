@model ProductsViewModel

@{
    ViewBag.HideHeader = false;
}

<div class="container my-4 d-flex flex-column gap-5">

    <nav class="d-flex justify-content-center rounded-3" style=" background-color: #141416; border: 0.5px solid gray;">
        <div class="p-3">
            <div class="px-2">
                <nav class="nav gap-5">
                    @foreach (var category in Model.Category)
                    {
                        <a href="/Products?categoryId=@category.Id" class="nav-link3 text-white rounded-3 px-3 py-2" style="font-size: 14px;">@category.Name</a>
                    }
                </nav>
            </div>
        </div>
    </nav>


    <section class="flex-grow-1">
        <h3 class="mb-4">
            @if (Model.CategoryName == null)
            {
                @:Tüm Ürünler
            }
            else
            {
                @Model.CategoryName
            }
        </h3>

        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 product-card" style="cursor: pointer;">
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="d-flex h-100" style="text-decoration: none;">
                        <div class="card product-card2 shadow-sm rounded-md overflow-hidden" style="width: 225px; height: 340px; background-color: transparent;">

                            <div class="d-flex align-items-center justify-content-center px-3 py-2" style="width: 225px; height: 200px;">
                                <img src="Images/@product.Img" class="img-fluid h-100 w-100" alt="@product.Name">
                            </div>

                            <div class="card-body d-flex flex-column">
                                <small class="text-muted mb-2" style="font-weight: lighter">@product.Name</small>
                                <h6 class="card-title text-white text-truncate" style="font-size: 14px;">@product.Description</h6>

                                <div class="font-weight-bold mb-3" style="font-size: 14px; color: #ef6c17;">
                                    @product.Price.ToString("C2") <small class="text-muted">/ 1 Adet</small>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>

</div>