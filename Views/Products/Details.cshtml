@model ProductDetailsViewModel

@{
    ViewBag.Title = "Ürünler";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>

<div class="container my-5" style="font-size: 14px;">

    @Html.Partial("Partial/_Product", Model.Product)

    <div>
        @Html.Partial("Partial/_Section", Model.Product)

        <div class="tab-content mt-3" id="myTabContent">

            @Html.Partial("Partial/_Reviews", Model)

            @Html.Partial("Modal/_ReviewModel", Model.Product)

            @Html.Partial("Partial/_Question", Model)

            @Html.Partial("Modal/_QuestionModel", Model.Product)

        </div>
    </div>
</div>