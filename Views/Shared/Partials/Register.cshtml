<div class="modal fade" id="registerModal" tabindex="-1" aria-labelledby="registerModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-black" style="width: 400px; border-radius: 12px;">
            <div class="modal-header text-white" style="border: none">
                <h5 class="modal-title" id="registerModalLabel" style="font-weight: bold; font-size: 22px;">Hesap Oluştur</h5>
            </div>
            <div class="modal-body">
                <form asp-controller="Auth" asp-action="Register" method="post" class="d-flex flex-column gap-3">
                    <div class="form-group">
                        <input name="userName" class="form-control rounded-3 px-3 py-2 text-white" placeholder="Kullanıcı Adı" required style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>
                    <div class="form-group">
                        <input name="email" class="form-control rounded-3 px-3 py-2 text-white" placeholder="E-posta" required style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" class="form-control rounded-3 px-3 py-2 text-white" placeholder="Şifre" required style="background-color: #18181c; border: 0.5px solid #71717a; font-size: 15px; height: 45px;"/>
                    </div>

                    @if (TempData["Error1"] != null)
                    {
                        <div style="background-color: #371517; color: #fff; padding: 15px; border-radius: 8px; font-size: 14px;">
                            @TempData["Error1"]
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center">
                        <button type="submit" class="px-3 py-2 rounded-3 d-flex align-items-center justify-content-center" style="font-size: 14px; cursor: pointer; background-color: #27272a; text-decoration: none; color: white; border: none;">Kayıt ol</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        
        var errorMessage = '@TempData["Error1"]';
        if (errorMessage) { 
            var modal = new bootstrap.Modal(document.getElementById("registerModal"));
            modal.show();
        }

        document.getElementById('registerModal').addEventListener('hidden.bs.modal', function () {
            location.reload();
        });
    });
</script>